{
    "compilerOptions": {
        "sourceMap": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es2015", "es2017", "dom"],
        "typeRoots": [
            "node_modules/@types"
        ],
        "moduleResolution": "node",
        "declaration": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
    },
    "include": [
        "stories/**/*"
    ],
    "exclude": [
        "node_modules/"
    ]
}
